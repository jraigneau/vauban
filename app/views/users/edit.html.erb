<% content_for :title do %>Edit Your account<% end %>

<h1>Editing account</h1>
<% form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
  <h2><%= @user.username %></h2>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
 <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "Submit" %> or <%= link_to 'Cancel', identities_path %> </p>

<% end %>

