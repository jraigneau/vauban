<% content_for :title do %>Create new identity<% end %>


<h1>New identity</h1>

<% form_for(@identity) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %>: <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :url %>: <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :login %>: <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password %>: <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :comment %>: <%= f.text_area :comment, :rows => "3", :cols => '30' %>
  </p>
  <p>
    <%= label_tag :secretkey %>: <%= password_field_tag :secretkey %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', identities_path %>
